{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "@vue/runtime-dom"
    ],
    "paths": {
      "src/*": [
        "./../../../../../../../src/Administration/Resources/app/administration/src/*"
      ],
      "@shopware/*": [
        "./../../../../../../../src/Administration/Resources/app/administration/src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "./../../../../../../../src/Administration/Resources/app/administration/src/global.types.ts",
    "./../../../../../../../src/Administration/Resources/app/administration/src/entity-schema-definition.d.ts",
    "./../../../../../../../src/Administration/Resources/app/administration/src/html-shim.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
